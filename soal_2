#include <iostream>
#include<conio.h> 
#include <unistd.h> //LIBRARY SLEEP/USLEEP	



using namespace std;
int main()
{
	
	system("color B"); // mengakses warna
	cout << "2. buatlah sebuah program dengan konstanta"<< endl; /* ini contoh soalnya dari ibu */
	cout <<"  PHI untuk mencari luas dan keliling lingkaran"<< endl; /* saya sengaja agar pada bagian ini*/
	cout <<"  Jika diketahui Jari jari lingkarannya adalah 100"<< endl;/*dapat berpindah line */
	
	sleep (3); /* dengan sleep, Program akan dihentikan selama selang waktu tertentu */
	
	for (int j=1;j<=100;j++){ /* ini namanya perulangan for, perulangan akan diulang */
	system ("cls");				/* selagi hasilnya kurang dari sama dengan 100 */
	cout<<"\n\t\t\trobot razan sedang menghitung.."<<j<<"%"<<endl;
	cout<<"\t";
	
	for (int i=1;i<=j;i++){ /* ini juga perulangan untuk mendeklarasikan jika i itu adalah angka 1 dan jika */
							/* i memang true kurang dari j samadengan j maka, akan eksekusi i++ */
		if (i%2==0){		
			cout<<"|";}
			
			}cout<<endl;		
			usleep (10);
		}
			
			int b = 100; /* input data *//*atau bisa disebut mendeklarasikan kalau b itu setara dengan intreger atau angka */
			float phi = 3.14; /*input data ke variabel juga *//* namun float hanya digunakan untuk data yang bernilai desimal saja */
			int kl = b*2*phi;/* menyimpan sebuah rumus keliling di sebuah variabel kl yang bernilai inreger*/
			int luas = b * b * phi;/* menyimpan sebuah rumus luas kedalam sebuah variabel */
			system("color D");
			cout<<"done ^_^ hasil dari luas lingkaran diatas adalah :"<<luas<<endl;/*outputnya*/
			cout<<"Wow 0o0 hasil dari keliling lingkaran diatas adalah"<<kl<<endl;/*outputnya*/
	
		getch;
		return 0;
}
	
 
